<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".RepManagement.rep_add_dialog">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#F4F4F4"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:background="#F4F4F4"
            android:outlineAmbientShadowColor="@android:color/holo_orange_light"
            android:outlineSpotShadowColor="@android:color/holo_orange_light"
            tools:targetApi="p">


            <TextView
                android:id="@+id/offer_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:text="أضافة مندوب"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/sep_hdr"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/offer_desc"
                android:background="#000" />

            <EditText
                android:id="@+id/signup_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:hint="اسم المندوب "
                android:layout_below="@+id/sep_hdr"
                android:background="@drawable/textedit_shape"
                android:drawableStart="@drawable/person"
                android:inputType="textPersonName"
                android:maxLength="50"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/signup_user_name_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:drawablePadding="5dp"
                android:gravity="start"
                android:text="error"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/error_outline_24"
                app:drawableTint="@android:color/holo_red_dark" />


            <EditText
                android:id="@+id/signup_phone_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signup_user_name"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:autofillHints="09"
                android:background="@drawable/textedit_shape"
                android:drawableStart="@drawable/phone_vector"
                android:drawablePadding="8dp"
                android:hint="رقم الهاتف"
                android:inputType="phone"
                android:maxLength="10"
                android:padding="10dp"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/signup_phone_no_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:drawablePadding="5dp"
                android:gravity="start"
                android:text="error"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/error_outline_24"
                app:drawableTint="@android:color/holo_red_dark" />

            <EditText
                android:id="@+id/signup_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signup_phone_no"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"

                android:layout_marginTop="20dp"
                android:autofillHints="09"
                android:background="@drawable/textedit_shape"
                android:drawableStart="@drawable/baseline_calendar_month_24"
                android:drawablePadding="8dp"
                android:hint="تاريخ البدء"
                android:inputType="date"
                android:maxLength="10"
                android:padding="10dp"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/signup_start_date_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:drawablePadding="5dp"
                android:gravity="start"
                android:text="error"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/error_outline_24"
                app:drawableTint="@android:color/holo_red_dark" />

            <Spinner
                android:id="@+id/spinner_locations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/textedit_shape"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@+id/signup_start_date" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginRight="-5dp"
            android:backgroundTint="@android:color/darker_gray"
            android:outlineSpotShadowColor="@android:color/darker_gray"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:fabCustomSize="30dp"
            app:fabSize="auto"
            android:layout_alignParentRight="true"
            app:layout_constraintBaseline_toTopOf="@+id/dialog_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:maxImageSize="20dp"
            app:tint="@color/black"
            android:contentDescription="Close" />
    </LinearLayout>


</RelativeLayout>
